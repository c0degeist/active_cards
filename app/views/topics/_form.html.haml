-# locales: (topic:)

= form_for topic do |f|
  - if topic.errors.any?
    #error_explanation.alert.alert-danger
      %p= "#{pluralize(topic.errors.count, "error")} prohibited this active_card from being saved:"
      %ul
        - topic.errors.full_messages.each do |message|
          %li= message

  %form
    .mb-3
      = f.label :title, class: 'form-label'
      = f.text_field :title, class: 'form-control'

    .row-spacer
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to "Add Deck", new_active_card_path(topic_id: topic.id), class: 'btn btn-secondary' if topic.persisted?
    = link_to "Back to topics", topics_path, class: 'ms-3'
