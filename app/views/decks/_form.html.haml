= form_with(model: deck) do |form|
  - if deck.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(deck.errors.count, "error")
        prohibited this deck from being saved:
      %ul
        - deck.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.submit
